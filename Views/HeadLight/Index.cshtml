@using X.PagedList;
@using X.PagedList.Mvc.Core;

@model IPagedList<HeadlightPrj.Data.Models.HeadLight>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Far List</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Decription</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    <br />
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.HeadLightId</th>
            <td>@x.Name</td>
            <td>@x.Description</td>
            <td>@x.Price</td>
            <td>@x.Stock</td>
            <td>@x.Category.CategoryName</td>
            <td><a href="/HeadLight/HeadLightDelete/@x.HeadLightId" class="btn btn-danger">Delete</a></td>
            <td><a href="/HeadLight/HeadLightGet/@x.HeadLightId" class="btn btn-success">Update</a></td>
            <td><a href="#" class="btn btn-success">Details</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page=>Url.Action("Index",new {page}))
<a href="/HeadLight/HeadLightAdd/" class="btn btn-primary">New HeadLight</a>


